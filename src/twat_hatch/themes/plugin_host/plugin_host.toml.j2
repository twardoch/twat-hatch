{% extends "_shared/base.toml.j2" %}

{% block header_comment %}# Configuration for Python plugin host package{% endblock %}

{% block project %}
# List of packages to initialize
packages = [
    "{{ name }}",  # Plugin host package
    "{{ name }}-plugin-example"  # Example plugin (optional)
]

# Plugin host package (this package will be the plugin host)
plugin_host = "{{ name }}"

# Output directory (optional, defaults to current directory)
output_dir = "packages"
{% endblock %}

{% block dependencies %}
{{ super() }}
# Plugin system dependencies
plugin_dependencies = [
    "pydantic>=2.0.0",
    "importlib-resources>=5.0.0",
    {% for dep in plugin_dependencies | default([]) %}
    "{{ dep }}",
    {% endfor %}
]
{% endblock %} 